<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h1>Can&#8217;t create post: <%= pluralize( @post.errors.count, "error" ) %></h1>

    <ul class="errors">
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit %></p>
<% end %>
