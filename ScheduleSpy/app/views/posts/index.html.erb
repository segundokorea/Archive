<% @title = "Posts" %>

  <% for post in @posts %>
      <div id="post">
      <h3><%= post.title %><br></h3>
      By <%= post.author %> at <em>on <%= post.created_at.strftime('%b %d, %Y at %H:%M') %></em><br>

      <%= post.body %>
      
      <%= link_to "Show", post %>
      <% if can? :update, post %>
	      <%= link_to "Edit", edit_post_path(post) %>
      <% end %>
      <% if can? :destroy, post %>      
	      <%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
      </div>
  <% end %>

  <% if can? :create, Post %>
	  <p><%= link_to "New Post", new_post_path %></p>
<% end %>
